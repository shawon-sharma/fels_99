<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_login"
    tools:context="com.framgia.fels_99.LoginActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/title_activity_login"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/text_title_activity_login_text_size"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/text_title_activity_login_margin_top"
        android:id="@+id/text_login"
        android:textColor="@android:color/black"/>
    <ImageView
        android:layout_width="@dimen/icon_width_and_height"
        android:layout_height="@dimen/icon_width_and_height"
        android:layout_below="@id/text_login"
        android:src="@drawable/email"
        android:id="@+id/image_email"
        android:layout_marginTop="@dimen/text_title_activity_login_margin_top"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_email_activity_login"
        android:textStyle="bold"
        android:layout_toRightOf="@id/image_email"
        android:layout_below="@id/text_login"
        android:layout_marginTop="@dimen/text_title_activity_login_margin_top"
        android:textSize="@dimen/text_email_activity_login_text_size"
        android:layout_marginLeft="@dimen/text_email_activity_login_margin_left"
        android:id="@+id/text_email"/>
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_text_email"
        android:layout_below="@id/image_email"
        android:hint="@string/text_email_activity_login"
        android:inputType="textEmailAddress"/>
    <ImageView
        android:layout_width="@dimen/icon_width_and_height"
        android:layout_height="@dimen/icon_width_and_height"
        android:id="@+id/image_password"
        android:layout_below="@id/edit_text_email"
        android:src="@drawable/lock"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_password_activity_login"
        android:textStyle="bold"
        android:layout_toRightOf="@id/image_password"
        android:layout_below="@id/edit_text_email"
        android:textSize="@dimen/text_email_activity_login_text_size"
        android:layout_marginLeft="@dimen/text_email_activity_login_margin_left"/>
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_text_password"
        android:layout_below="@id/image_password"
        android:hint="@string/text_password_activity_login"
        android:inputType="textPassword"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/check_remember"
        android:layout_below="@id/edit_text_password"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/check_remember_activity_login"
        android:textSize="@dimen/text_email_activity_login_text_size"
        android:layout_toRightOf="@id/check_remember"
        android:layout_below="@id/edit_text_password"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/text_validation_activity_login"
        android:id="@+id/text_validation"
        android:layout_below="@id/check_remember"
        android:textColor="@android:color/holo_red_dark"
        android:visibility="invisible"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_login"
        android:text="@string/title_activity_login"
        android:layout_below="@id/text_validation"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/text_title_activity_login_margin_top"
        android:textColor="@drawable/button_selector"
        android:background="@color/colorAccent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/text_create_account"
        android:text="@string/text_create_account_activity_login"
        android:textSize="@dimen/text_create_account_activity_login_text_size"
        android:textStyle="bold"
        android:textColor="@android:color/black"/>
</RelativeLayout>
