<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.framgia.elsytem.ProfileActivity"
    tools:showIn="@layout/activity_profile">

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/avatar"
                android:layout_width="@dimen/upload_avatar_width_and_height"
                android:layout_height="@dimen/upload_avatar_width_and_height"
                android:layout_marginTop="@dimen/text_title_activity_login_margin_top"
                android:src="@drawable/ic_person_outline_black_36dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/person_layout_marginleft"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/edit_profile"
                        android:layout_width="@dimen/icon_width_and_height"
                        android:layout_height="@dimen/icon_width_and_height"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:src="@drawable/edit_profile"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img"
                        android:layout_width="@dimen/icon_width_and_height"
                        android:layout_height="@dimen/icon_width_and_height"
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/ic_person_outline_black_36dp"/>

                    <TextView
                        android:id="@+id/person"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/email_textview_layout_marginleft"
                        android:layout_toRightOf="@id/img"
                        android:textSize="@dimen/text_email_activity_register_text_size"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:id="@+id/em"
                        android:layout_width="@dimen/icon_width_and_height"
                        android:layout_height="@dimen/icon_width_and_height"
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/email"/>

                    <TextView
                        android:id="@+id/email_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/email_textview_layout_marginleft"
                        android:layout_toRightOf="@id/em"
                        android:textSize="@dimen/text_email_activity_register_text_size"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:id="@+id/desc"
                        android:layout_width="@dimen/icon_width_and_height"
                        android:layout_height="@dimen/icon_width_and_height"
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/ic_description_black_36dp"/>

                    <TextView
                        android:id="@+id/desc_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/email_textview_layout_marginleft"
                        android:layout_toRightOf="@id/desc"
                        android:textSize="@dimen/text_email_activity_register_text_size"
                        />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <ListView
            android:id="@+id/listview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/choice_text_margin_Top">
        </ListView>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/words_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/content_profile_words_btn_text"/>

            <Button
                android:id="@+id/lesson_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="@string/content_profile_lesson_btn_text"/>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>
